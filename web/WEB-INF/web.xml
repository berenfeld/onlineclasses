        <url-pattern>/student_update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>about_us</servlet-name>
        <url-pattern>/about_us</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
